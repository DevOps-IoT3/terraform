# Fichier d'exemple de variables pour Terraform
# Copiez ce fichier vers terraform.tfvars et adaptez les valeurs selon vos besoins

# Configuration de base
environment = "dev"
location    = "westus"
owner       = "DevOps Team"
github_repository = "DevOps-CI-CD"

# Configuration AKS
aks_node_count     = 1
aks_vm_size        = "Standard_B2s"

# Configuration PostgreSQL
postgresql_version    = "14"
postgresql_sku_name   = "B_Standard_B1ms"
postgresql_storage_mb = 32768
database_name         = "employeesdb"
db_admin_username     = "dbadmin"

# Mot de passe PostgreSQL (laissez vide pour génération automatique)
pg_password = ""

# Configuration GitHub Container Registry
github_username = "votre-nom-utilisateur-github"
image_tag      = "latest"

# Configuration réseau
vnet_address_space           = ["10.0.0.0/16"]
aks_subnet_address_prefixes  = ["10.0.1.0/24"]
db_subnet_address_prefixes   = ["10.0.2.0/24"]

# IMPORTANT: 
# Ces valeurs sensibles ne doivent pas être stockées dans ce fichier en production.
# Utilisez plutôt des variables d'environnement ou des secrets GitHub :
# 
# github_token = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
#
# Pour GitHub Actions, ajoutez ces secrets:
# - ARM_CLIENT_ID
# - ARM_CLIENT_SECRET
# - ARM_SUBSCRIPTION_ID
# - ARM_TENANT_ID
# - GITHUB_USERNAME
# - GITHUB_TOKEN
# - AZURE_CREDENTIALS (JSON avec clientId, clientSecret, subscriptionId, tenantId)
